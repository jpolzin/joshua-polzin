extends header

block content
  div.container.border.mt-4.bg-gray
    div.row.pt-4.center.p-4
      ul.list-unstyled.col-sm-12.m-0.p-0
        each project, index in projects
          li.project-container.border-dark.border.p-2.bg-white
            div.project-header.mb-1.row.mt-0
              div.col
                h3= project.name
                div.project-tags
                  ul.row.pl-0.ml-0
                    each tag in project.tags
                      div(class='col-xs-auto project-tag p-0 pr-2 pl-2 ml-1 mr-2 mb-1 ' + tag.color)
                        p.m-0.p-0 C++
              div.col.float-right
                h5.text-right.mb-2= project.category
                p.font-italic.text-muted.text-right.mb-1= project.date
            div.project-body.border-top.pt-1
              p= project.description
          if index !== projects.length - 1
            div.mt-4.bg-gray






